// Define global parameters
params {
    inputFile = '/data/volume/bacterial_dna.fasta' // Default input file path in the mounted volume
    cutoff = 0.5 // Default GC content cutoff
    outputDir = '/data/volume' // Default output directory path (same as input)
}

// Process configuration
process {
    withName: 'calculate_gc_content' {
        publishDir = [path: params.outputDir, mode: 'copy'] // Copy output files to the specified output directory
        memory = '4 GB' // Default memory allocation for processes
        cpus = 2 // Default CPU allocation for processes
    }
}

// Executor configuration
executor {
    name = 'local' // Use local execution
}

// Docker configuration (if applicable)
docker.enabled = true // Enable Docker support
docker.image = 'wolftower85/ubuntu:lab5' // Specify the Docker image to use